{
  "version": 2,
  "buildCommand": "npm run build:all",
  "outputDirectory": "dist/public",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "includeFiles": [
        "dist/app.cjs",
        "dist/public/**",
        "shared/**"
      ]
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.ts" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}


